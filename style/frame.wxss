
.tab {
  width: 100%;
  background-color: #87CBB7;
  text-align: center;
  line-height: 2rem;
   display: flex;
    border-bottom: 1px solid #eee;
}

.tab view {
  display: inline-block;
  width: 250rpx;
}

.select {
  color: #000000;
  background-color: #85D2A4;
  height: 100%;
   border-bottom: 2px solid #84F266;
}

.selectnot {
  color: #ffffff;
  background-color: #87CBB7;
}

.footerbar {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  flex-direction: row;
  display: flex;
  background-color: #ACD3C4;
  line-height: 1.5rem;
    font-size: 30rpx;

}

.footerbar .button {
  background-color: #ACD3C4;
  height: 100%;
  width: 100px;
  border: none;
}

.footerbar .bazibutton {
   width: 50%;
   margin-right: 1px
}
